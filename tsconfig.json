{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"lib": [
			"ES5",
			"ES2015",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"@models/*": [
				"./models/*"
			],
			"@modules/*": [
				"./modules/*"
			],
			"@support/*": [
				"./support/*"
			],
			"@files/*": [
				"./files/*"
			],
			"@paths/*": [
				"./files/path-library/*"
			]
		},
		"typeRoots": [
			"./node_modules",
			"./support/custom-assertions"
		]
	},
	"exclude": [
		"dist",
		"node_modules"
	],
	"include": [
		"**/*.ts"
	]
}
